---
// component inports
import Mainlayout from "../layouts/mainLayout.astro";
import PostCard from "../components/PostCard.astro";
import Links from "../components/Links.astro";
// utils
import { formatBlogPosts } from "../js/utils";

// get data
const allPosts = await Astro.glob("./blog/*.md");
const formattedPosts = formatBlogPosts(allPosts, {
  limit: 2,
});
---

<Mainlayout title='Home Page' description='This the home page'>
  <section class='container' aria-label='New Blog Posts'>
    <h2 class='h1'>New Blog Posts</h2>
    <div class='post-container'>
      {
        formattedPosts.map((post) => (
          <PostCard
            frontmatter={post.frontmatter}
            url={post.url}
            tagType='h3'
          />
        ))
      }
    </div>
  </section>
  <section class="container about" aria-label="About Me">
    <img 
    src="/images/headshot.jpg" 
    alt ="My headshot" 
    width="200" 
    height="330"
    format="avif"
    fit="cover"
    />
    <div class="content"> 
      <h1 class="h1">My Blog</h1>
      <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Eveniet, deleniti. Provident dignissimos unde error.</p>
      <Links href="/about" text="About me" style="secondary">

    </div>
  </section>
</Mainlayout>
